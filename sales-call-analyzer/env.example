# Sales Call Analyzer - Environment Variables
# Copy this file to .env and fill in your values

# Flask (required)
SECRET_KEY=your-secret-key-change-this-in-production

# OpenAI (required)
OPENAI_API_KEY=sk-...
OPENAI_MODEL=gpt-4o

# Whisper model (optional, default: base)
# Options: tiny (fastest, ~10x real-time), base (balanced, ~2-3x), small, medium, large (slowest, most accurate)
# For speed, use 'tiny'. For accuracy, use 'base' or larger.
WHISPER_MODEL=tiny

# Email - Option 1: Resend (recommended)
RESEND_API_KEY=re_...
RESEND_FROM=noreply@yourdomain.com

# Email - Option 2: SMTP
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password
# SMTP_FROM=your-email@gmail.com

# Authorization (optional)
# Comma-separated list of allowed email addresses
# If not set, all emails are allowed (dev mode)
ALLOWED_EMAILS=trainer1@company.com,trainer2@company.com

# Magic link expiry (optional, default: 15)
MAGIC_LINK_EXPIRY_MINUTES=15

# App URL (for magic links)
APP_URL=http://localhost:5000

# Upload settings (optional)
UPLOAD_FOLDER=/tmp/sales-call-analyzer

# Database Configuration
# Option 1: PostgreSQL (recommended for production, e.g., Railway)
# Railway automatically provides DATABASE_URL when you add PostgreSQL service
# DATABASE_URL=postgresql://user:password@host:port/database

# Option 2: SQLite (for local development)
# IMPORTANT: In Docker deployments, set this to a path in a persistent volume
# Example: DATABASE_PATH=/data/sales_calls.db
# The directory will be created automatically if it doesn't exist
DATABASE_PATH=sales_calls.db

